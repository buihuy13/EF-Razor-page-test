@page "/admin/edit"
@model Roles.EditModel
@{
    ViewData["Title"] = "Edit Role";
}

<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="@Model.StatusMessage" />
<form method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="col-md-6">
            <label class="form-label" asp-for="Input.currentName"></label>
            <input asp-for="Input.currentName" class="form-control" disabled placeholder="@Model.Input.currentName"/>
            <div></div>
            <label class="form-label" asp-for="Input.newName"></label>
            <input asp-for="Input.newName" class="form-control" autocomplete="rolename" aria-required="true" placeholder="@Model.Input.currentName" />
            <span asp-validation-for="Input.newName" class="text-danger"></span>
        </div>
    </div>
    <p>
        <div>
            <button class="btn btn-success" type="submit">Edit</button>
            <a asp-page="./Index" class="btn btn-info">Back</a>
        </div>

        <h3>Các Claim của Role</h3>
        <div>
            @foreach(var claim in Model.Claims)
            {
                <a asp-page="./EditClaim" asp-route-claimid="@claim.Id">@claim.ClaimType : @claim.ClaimValue</a><br />
            }
        </div>

        <a class="btn btn-info" asp-page="./AddClaim" asp-route-roleid="@Model.role?.Id">Add Claim</a>
    </p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}