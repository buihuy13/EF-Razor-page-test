@page "/admin/addclaim"
@model AddClaimModel
@{
    ViewData["Title"] = "Add Claim Page";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" for="@Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label class="form-label" asp-for="@Model.Input.ClaimType"></label>
                <input asp-for="@Model.Input.ClaimType" class="form-control" placeholder="abc" autocomplete="claimtype" aria-required="true" />
                <span asp-validation-for="@Model.Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="@Model.Input.ClaimValue"></label>
                <input asp-for="@Model.Input.ClaimValue" class="form-control" placeholder="abc" autocomplete="claimtype" aria-required="true" />
                <span asp-validation-for="@Model.Input.ClaimValue" class="text-danger"></span>
            </div>
            <p>
                <button class="btn btn-success">Add</button>
                <a class="btn btn-info" asp-page="./Edit" asp-route-roleid="@Model.role?.Id">Back</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}